<div align="left">
  <div class="container">
    <dl>
      <dt><a href="/users/<%=@tweet.user.slug%>"><%="#{@tweet.user.username} "%></a>&bull; <%=(@tweet.created_at + Time.zone_offset('PST') + 3600).strftime("%b %d") %></dt>
      <dd><%=@tweet.content %></dd>
    </dl>
    <%if @tweet.user.id == session[:user_id]%>
      <a href="/tweet/edit" class="btn btn-outline-info btn-primary btn-primary:hover btn-sm">Edit</a>
      <a href="/tweet/delete" class="btn btn-outline-info btn-primary btn-primary:hover btn-sm">Delete</a>
    <%end%>
  </div> <!-- 1st container -->
</div>
